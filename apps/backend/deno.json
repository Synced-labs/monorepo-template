{
  "tasks": {
    "build": "deno compile --allow-all src/main.ts",
    "dev": "deno run -A --watch src/main.ts",
    "start": "deno run -A src/main.ts",
    "test": "deno test -A",
    "lint": "deno lint",
    "check-types": "deno check src/main.ts",
    "clean": "rm -rf dist/*",
    "generate": "deno run -A scripts/cli.ts generate"
  },
  "imports": {
    "@/": "./src/",
    "@shared/": "../../packages/shared/",
    "@config/": "../../packages/config/",
    "express": "npm:express@4.18.2",
    "firebase-admin": "npm:firebase-admin@11.11.0",
    "cors": "npm:cors@2.8.5",
    "zod": "npm:zod@3.22.4"
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["deno.window", "dom"]
  }
}